	{% endif %}
    <script>
        var pify_shop='{{shop.permanent_domain}}';
      	var exat_page = '';
        var pifyJquery= jQuery.noConflict ();
        {% if template contains 'cart' %}
            exat_page='cart';
        {% endif %}
        {% if template contains 'register' %}
            exat_page='register';
        {% endif %}
        {% if template contains '/account'  %}
              {% unless template contains '/account/activate' %}
                  exat_page='account';
              {% endunless %}
        {% endif %}

    </script>
