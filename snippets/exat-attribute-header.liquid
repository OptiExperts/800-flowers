	{% if template contains 'cart' or template contains 'register' %}
	<script type="text/javascript" src="https://customized-attribute-cdn.pifyapp.com/assets/js/jquery.validate.min.js"></script>
	<script type="text/javascript" src="https://customized-attribute-cdn.pifyapp.com/assets/js/jquery-ui.min.js"></script>
