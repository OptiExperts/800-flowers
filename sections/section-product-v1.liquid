<div data-section-id="{{ section.id }}" data-section-type="section-product-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-product-v1 mt-all">
    <div class="container container-v2">
      <div class="text-center">
        {% if section.settings.title_heading != blank %}
        <h3 class="title_heading mb-0" style="color: {{section.settings.color_title}}">{{section.settings.title_heading}}</h3>
        {% endif %}
        {% if section.settings.sub-title1 != blank %}
        <span class="sub_heading">
          {{section.settings.sub-title1}}
        </span>
        {% endif %}
      </div>
      <div class="row js_section_product mt-50">   
        {% assign products_limit = section.settings.products_limit %}
        {% assign col = section.settings.select_collection %}
        {% for product in collections[col].products limit: products_limit %}
        <div class="col-md-4 col-12 product_item">
          {% include 'product-item-v1' %}
        </div>
        {% else %}
        {% for i in (1..products_limit) %}
        <div class="col-md-4 col-12 product_item">
          {% include 'empty-product-item' %}
        </div>
        {% endfor %}
        {% endfor %}
               
      </div>

      <div class="custom_button{% if section.settings.button !=blank %} heading{% endif %}">
        <a href="{{ section.settings.button_link | default:'#'}}" class="btn-primary">
          {{ section.settings.button | escape }}
        </a>
      </div>
      
    </div>
  </div>
</div>

<style>
  .heading a {
    background-color:{{ section.settings.button_color }} !important;
    padding: 10px 60px;
    font-size: 18px;
    line-height: 26px;
    display: table;
    margin: 30px auto 0;
    box-shadow: 0 2px 6px #99456c;
    border-radius:5px;
    transition: all 0.5s ease 0s;
  
  }
  .heading a:hover{
    	box-shadow:none;
  }
  .section-product-v1 .slick-dots .slick-active button{
    background-color: rgb(143 88 163);
  }
  .section-product-v1 .slick-dots li button{
    border: 2px solid rgba(143, 88, 163, .5);
  }
  .section-product-v1 .next-slide, .section-product-v1 .prev-slide{
    top: 35%;
  }
    @media all and (max-width: 767px) {
      .heading a {
        background-color: #915c75 !important;
        padding: 15px 28px;
        font-size: 16px;
        line-height: 22px;
        margin: 0 1rem 21px 20px;
      }
  
    }

</style>
