<div data-section-id="{{ section.id }}" data-section-type="section-banner-v11" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v11 mt-all" >
    <div class="container container-v2">
      <div class="row">
        <div class="col-lg-6 col-md-6 col-12 col-sm-12">
          <div class="banner-ver">
            <div class="banner-item">
              <a href="{{section.settings.url_banner1}}" class="d-block box-img">
               <img data-src="{% if section.settings.img_banner1 != blank %} {{section.settings.img_banner1 | img_url: 'master'}} {% else %} //via.placeholder.com/690x690 {% endif %}" class="lazyload img-fluid w-100" alt="_img_banner">
              </a>
              <div class="content">
                <h3 class="title-banner title-banner-{{ section.id }}">{{section.settings.title_banner1}}</h3>
                {% if section.settings.button_1 != blank %}
                <a href="{{section.settings.url_button1}}" class="btn-banner btn-banner-{{ section.id }} text-center">{{section.settings.button_1}}</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-12 col-sm-12">
          <div class="wrap-banner">
            <div class="banner-item">
              <a href="{{section.settings.url_banner2}}" class="d-block box-img">
               <img data-src="{% if section.settings.img_banner2 != blank %} {{section.settings.img_banner2 | img_url: 'master'}} {% else %} //via.placeholder.com/690x330 {% endif %}" class="lazyload img-fluid w-100" alt="_img_banner">
              </a>
              <div class="content">
                <h3 class="title-banner title-banner-{{ section.id }}">{{section.settings.title_banner2}}</h3>
                 
              </div>
            </div>
            <div class="banner-item">
              <a href="{{section.settings.url_banner3}}" class="d-block box-img">
               <img data-src="{% if section.settings.img_banner3 != blank %} {{section.settings.img_banner3 | img_url: 'master'}} {% else %} //via.placeholder.com/690x330 {% endif %}" class="lazyload img-fluid w-100" alt="_img_banner">
              </a>
              <div class="content">
                <h3 class="title-banner title-banner-{{ section.id }}">{{section.settings.title_banner3}}</h3>
                
              </div>
            </div>
          </div>
        </div>
      </div>
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
    </div>
  </div>
</div>
<style>
  .section-banner-v11 .banner-item .content .title-banner-{{ section.id }} {
  	color: {{section.settings.color_title_banner}};
  }
.section-banner-v11 .banner-item .content .btn-banner-{{ section.id }} {
    color: {{section.settings.color_btn}};
    transition: all .3s;
    letter-spacing: 2px;
  }
  .section-banner-v11 .banner-item .content .btn-banner-{{ section.id }}:hover {
    background: {{section.settings.bg_btn_hover}};
    color: {{section.settings.color_btn_hover}};
    
  }
</style>

