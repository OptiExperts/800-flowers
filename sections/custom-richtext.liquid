{{ 'services_band_text.css' | asset_url | stylesheet_tag }}

<div class="container">
  <div class="services_band">
    <div class="services_title">
      <h2 class="heading{% if section.settings.heading !=blank %} no--heading{% endif %}">{{ section.settings.heading | escape }}</h2>

      {% if section.settings.text !=blank %}
      <p>{{ section.settings.text }}</p>
      {% endif %}
    </div>
    <div class="services_box_wrapper">
      <div class="services_left{% if section.settings.sub_text != blank %} content_left{% endif %}">
        {{ section.settings.sub_text }}
      </div>
      <div class="services_right">
        <h4 class="heading {% if section.settings.headings !=blank %} no-heading{% endif %}">{{ section.settings.heading | escape }}</h4>
        <ul>
          {% for block in section.blocks %}
          <li>
            {{ block.settings.sub_content }}
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Custom Richtext",
    "settings": [
      {
		"type": "text",
		"id": "heading",
		"label": "Heading Label"
      },
	  {
		"type": "textarea",
		"id": "text",
		"label": "Text Label"
      },
	  {
        "type": "richtext",
        "id": "sub_text",
        "label": "Sub Text Label"
      },
	  {
        "type": "text",
        "id": "headings",
        "label": "Heading Label Right"
      }
	],
	"blocks":[
	  {
		"type": "text",
		"name": "Text",
		"settings": [
		  {
            "type": "richtext",
            "id": "sub_content",
            "label": "Sub Text"
          }
		]
      }
	],
	"presets":[ 
      {
		"name": "Custom Richtext"
      }
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

